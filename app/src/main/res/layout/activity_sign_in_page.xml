<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_in_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/emailsignin"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textPersonName"
            android:visibility="visible" />

        <EditText
            android:id="@+id/pswrdsignin"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnLoginsignin"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:onClick="btnUserLogin_Click"
            android:text="LOG IN"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descrSignin"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:text="YOUR ACCOUNT FOR EVERYTHING BIKEBUD"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/policy"
            android:layout_width="316dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:text="By logging in, you agree to BikeBud's Privacy Policy and Terms of use."
            android:textAlignment="center" />

        <TextView
            android:id="@+id/notmembertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="470dp"
            android:text="Not a member ?" />

        <Button
            android:id="@+id/btnJoinGoback"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="455dp"
            android:background="@color/colorWhite"
            android:onClick="btnJoinBackMethod"
            android:text="Join now"
            android:textAllCaps="false" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>